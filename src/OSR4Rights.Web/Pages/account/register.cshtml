@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles {
    <link href="/css/style-login.css" rel="stylesheet" type="text/css" />
}

@*<h1>Register</h1>*@

<div class="container">
    <div class="wrapper">
        <div class="company-info">
            <h3>Create new Account - thank you!</h3>
            <p class="text-sm">By creating an account it makes it much easier for us to run the site and know who you are - appreciated.</p>
            <p class="text-sm">Consider using a password manager or using a 3 random word password</p>
            <ul>
                <li class="text-sm"><i class="fa fa-envelope"></i> help@osr4rightstools.org</li>
            </ul>
        </div>
        <div class="contact">
            <form method="post">
                <div class="py-md">
                    <label class="text-sm">Email Address</label>
                    <input asp-for="EmailB" class="input-text" value="">
                    <span asp-validation-for="EmailB" class="text-danger text-sm"></span>
                </div>
                <div class="py-md">
                    <label class="text-sm">Create Secure Password</label>
                    <input asp-for="PasswordB" class="input-text" value="">
                    <span asp-validation-for="PasswordB" class="text-danger"></span>
                </div>

                <div class="py-md">
                    <label class="text-sm">What is 2 + 1?</label>
                    <input asp-for="Answer" class="input-text" value="">
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <p class="full">
                    <button type="submit">Register</button>
                </p>

                <div class="py-md">
                    <a href="/account/login">Already registered? Login here</a>
                </div>


                <div class="hidden">
                    <input asp-for="Email2" class="input-text" value="">
                </div>

            </form>
        </div>
    </div>
</div>



